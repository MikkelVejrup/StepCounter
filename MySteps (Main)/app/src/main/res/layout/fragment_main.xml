<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".ui.fragment.MainFragment">

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="200dp"
            app:cpb_background_progressbar_color="#65F2F2F2"
            app:cpb_background_progressbar_width="15sp"
            app:cpb_progress_direction="to_right"
            app:cpb_progress_max="2500"
            app:cpb_progressbar_color="@color/purple_700"
            app:cpb_progressbar_width="20dp"
            app:cpb_round_border="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.347" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBarMo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            app:cpb_background_progressbar_color="#65F2F2F2"
            app:cpb_background_progressbar_width="5sp"
            app:cpb_progress_direction="to_right"
            app:cpb_progress_max="2500"
            app:cpb_progressbar_color="@color/purple_700"
            app:cpb_progressbar_width="7dp"
            app:cpb_round_border="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/circularProgressBarTu"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBarTu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            app:cpb_background_progressbar_color="#65F2F2F2"
            app:cpb_background_progressbar_width="5sp"
            app:cpb_progress_direction="to_right"
            app:cpb_progress_max="2500"
            app:cpb_progressbar_color="@color/purple_700"
            app:cpb_progressbar_width="7dp"
            app:cpb_round_border="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/circularProgressBarWe"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/circularProgressBarMo"
            app:layout_constraintTop_toBottomOf="@+id/group" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBarWe"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            app:cpb_background_progressbar_color="#65F2F2F2"
            app:cpb_background_progressbar_width="5sp"
            app:cpb_progress_direction="to_right"
            app:cpb_progress_max="2500"
            app:cpb_progressbar_color="@color/purple_700"
            app:cpb_progressbar_width="7dp"
            app:cpb_round_border="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/circularProgressBarTh"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/circularProgressBarTu"
            app:layout_constraintTop_toBottomOf="@+id/group" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBarTh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            app:cpb_background_progressbar_color="#65F2F2F2"
            app:cpb_background_progressbar_width="5sp"
            app:cpb_progress_direction="to_right"
            app:cpb_progress_max="2500"
            app:cpb_progressbar_color="@color/purple_700"
            app:cpb_progressbar_width="7dp"
            app:cpb_round_border="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/circularProgressBarFr"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/circularProgressBarWe"
            app:layout_constraintTop_toBottomOf="@+id/group" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBarFr"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            app:cpb_background_progressbar_color="#65F2F2F2"
            app:cpb_background_progressbar_width="5sp"
            app:cpb_progress_direction="to_right"
            app:cpb_progress_max="2500"
            app:cpb_progressbar_color="@color/purple_700"
            app:cpb_progressbar_width="7dp"
            app:cpb_round_border="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/circularProgressBarSa"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/circularProgressBarTh"
            app:layout_constraintTop_toBottomOf="@+id/group" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBarSa"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            app:cpb_background_progressbar_color="#65F2F2F2"
            app:cpb_background_progressbar_width="5sp"
            app:cpb_progress_direction="to_right"
            app:cpb_progress_max="2500"
            app:cpb_progressbar_color="@color/purple_700"
            app:cpb_progressbar_width="7dp"
            app:cpb_round_border="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/circularProgressBarSu"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/circularProgressBarFr"
            app:layout_constraintTop_toBottomOf="@+id/group" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBarSu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            app:cpb_background_progressbar_color="#65F2F2F2"
            app:cpb_background_progressbar_width="5sp"
            app:cpb_progress_direction="to_right"
            app:cpb_progress_max="2500"
            app:cpb_progressbar_color="@color/purple_700"
            app:cpb_progressbar_width="7dp"
            app:cpb_round_border="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/circularProgressBarSa"
            app:layout_constraintTop_toBottomOf="@+id/group" />

        <TextView
            android:id="@+id/txtStepCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/circularProgressBar"
            app:layout_constraintEnd_toEndOf="@+id/circularProgressBar"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/circularProgressBar"
            app:layout_constraintTop_toTopOf="@+id/circularProgressBar"
            app:layout_constraintVertical_bias="0.496" />

        <TextView
            android:id="@+id/txtTotalStepCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="10000"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/circularProgressBar"
            app:layout_constraintStart_toStartOf="@+id/circularProgressBar"
            app:layout_constraintTop_toBottomOf="@+id/txtStepCount" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="txtStepCount,txtTotalStepCount"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="264dp"
            android:layout_height="54dp"
            android:layout_marginTop="32dp"
            android:text="Today"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/circularProgressBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/day1"
            android:layout_width="40dp"
            android:layout_height="23dp"
            android:layout_marginBottom="8dp"
            android:text="Mo"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/circularProgressBarMo"
            app:layout_constraintEnd_toEndOf="@+id/circularProgressBarMo"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/circularProgressBarMo" />

        <TextView
            android:id="@+id/day2"
            android:layout_width="40dp"
            android:layout_height="23dp"
            android:layout_marginBottom="8dp"
            android:text="Tu"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/circularProgressBarTu"
            app:layout_constraintEnd_toEndOf="@+id/circularProgressBarTu"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/circularProgressBarTu" />

        <TextView
            android:id="@+id/day3"
            android:layout_width="40dp"
            android:layout_height="23dp"
            android:layout_marginBottom="8dp"
            android:text="We"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/circularProgressBarWe"
            app:layout_constraintEnd_toEndOf="@+id/circularProgressBarWe"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/circularProgressBarWe" />

        <TextView
            android:id="@+id/day4"
            android:layout_width="40dp"
            android:layout_height="23dp"
            android:layout_marginBottom="8dp"
            android:text="Th"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/circularProgressBarTh"
            app:layout_constraintEnd_toEndOf="@+id/circularProgressBarTh"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/circularProgressBarTh" />

        <TextView
            android:id="@+id/day5"
            android:layout_width="40dp"
            android:layout_height="23dp"
            android:layout_marginBottom="8dp"
            android:text="Fr"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/circularProgressBarFr"
            app:layout_constraintEnd_toEndOf="@+id/circularProgressBarFr"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/circularProgressBarFr" />

        <TextView
            android:id="@+id/day6"
            android:layout_width="40dp"
            android:layout_height="23dp"
            android:layout_marginBottom="8dp"
            android:text="Sa"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/circularProgressBarSa"
            app:layout_constraintEnd_toEndOf="@+id/circularProgressBarSa"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/circularProgressBarSa" />

        <TextView
            android:id="@+id/day7"
            android:layout_width="40dp"
            android:layout_height="23dp"
            android:layout_marginBottom="8dp"
            android:text="Su"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/circularProgressBarSu"
            app:layout_constraintEnd_toEndOf="@+id/circularProgressBarSu"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/circularProgressBarSu" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="Age"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circularProgressBarMo" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Activity lvl"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Cal steps:"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="curDate"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TimeLive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="LiveTime"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/age"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="60dp"
            android:ems="10"
            android:hint="@string/age"
            android:inputType="number"
            android:text="@string/age"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            tools:text="@string/age" />

        <EditText
            android:id="@+id/ALvl"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="number"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/age" />

        <TextView
            android:id="@+id/txtcalSteps"
            android:layout_width="67dp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="number"
            android:text="0"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/ALvl" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Low 1, mid 2 and high 3"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/ALvl"
            app:layout_constraintStart_toEndOf="@+id/ALvl" />

        <Button
            android:id="@+id/bCalStep"
            android:layout_width="170dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="Cal steps"
            app:layout_constraintEnd_toStartOf="@+id/bStepGoal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtcalSteps" />

        <Button
            android:id="@+id/bStepGoal"
            android:layout_width="170dp"
            android:layout_height="48dp"

            android:text="Set step goal"
            app:layout_constraintBaseline_toBaselineOf="@+id/bCalStep"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bCalStep" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="/"
            android:textColor="@color/white"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtTotalStepCount"
            app:layout_constraintEnd_toStartOf="@+id/txtTotalStepCount" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>